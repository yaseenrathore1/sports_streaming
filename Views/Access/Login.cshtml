@model Sportrs_Streaming_platform.Models.User;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sports_Streaming - Login</title>
    <link rel="stylesheet" href="~/login_assets/style.css">

   


</head>
    <!-- partial:index.partial.html -->
    <body>
        <section class="container">
            <div class="login-container">
                <div class="circle circle-one"></div>
                <div class="form-container">
                    <img src="https://raw.githubusercontent.com/hicodersofficial/glassmorphism-login-form/master/assets/illustration.png" alt="illustration" class="illustration" />
                    <h1 class="opacity">LOGIN</h1>
                    <form asp-controller="Access" asp-action="Login" method="post">
                    <input type="text" placeholder="Enter your UserName" asp-for="UserName" />
                        <div class="password-container">
                        <input type="password" id="passwordInput" placeholder="Enter your Password" asp-for="Password" />
                        <div class="eye-icon" onclick="togglePasswordVisibility()"></div>
                        </div>
                        <button class="opacity">SUBMIT</button>
                    </form>
                    <div class="register-forget opacity">
                        <label for="">
                            <input type="checkbox" asp-for="KeepLogin" />
                            Keep me logged In.
                        </label>
                        
                    </div>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-danger " style="color:red;" >
                        @ViewBag.Message
                    </div>
                }
                </div>
                <div class="circle circle-two"></div>
            </div>
            <div class="theme-btn-container"></div>
        </section>

    <!-- partial -->
    <script src="~/login_assets/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-pzjw8A+ttk5VPXZEg/CJCx3FLXzxRSsF9gY4D9PY5dUPjD3JA75p+3O5ZHwr5cfn"
            crossorigin="anonymous"></script>

    <!-- Popper.js Core -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
</body>
</html>


    